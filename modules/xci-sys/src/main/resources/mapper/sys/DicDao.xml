<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.lvyanyang.sys.dao.DicDao">
    <!--region 公共代码段-->

    <!--公共查询列-->
    <sql id="select">
        select id,parent_id,category_code,name,spell,value,path,status,remark from sys_dic
    </sql>

    <!--region 公共Where查询条件-->
    <sql id="where">
        <where>
            <if test="filter.status != null">status = #{filter.status}</if>
            <if test="filter.categoryCode != null and filter.categoryCode != ''">and category_code = #{filter.categoryCode}</if>
        </where>
    </sql>
    <!--endregion-->

    <!--查询List-->
    <sql id="list">
        <include refid="select"/>
        <include refid="where"/>
        order by parent_id asc,path asc
    </sql>

    <!--endregion-->

    <!--region 是否存在指定主键的字典-->
    <select id="existById" resultType="java.lang.Boolean">
        <include refid="com.github.lvyanyang.internal.FrameworkDao.exists">
            <property name="table" value="sys_dic"/>
            <property name="where" value="existByIdWhere"/>
        </include>
    </select>
    <!--existById Where-->
    <sql id="existByIdWhere">
        where id = #{id}
    </sql>
    <!--endregion-->

    <!--region 检查字典类型编码是否存在-->
    <select id="existByCategoryCode" resultType="java.lang.Boolean">
        <include refid="com.github.lvyanyang.internal.FrameworkDao.exists">
            <property name="table" value="sys_dic"/>
            <property name="where" value="existByCodeWhere"/>
        </include>
    </select>
    <!--existByCode Where-->
    <sql id="existByCodeWhere">
        where category_code = #{categoryCode}
    </sql>
    <!--endregion-->

    <!--region 检查是否存在指定的字典名称-->
    <select id="existByName" resultType="java.lang.Boolean">
        <include refid="com.github.lvyanyang.internal.FrameworkDao.exists">
            <property name="table" value="sys_dic"/>
            <property name="where" value="existByNameWhere"/>
        </include>
    </select>
    <!--existByNameWhere-->
    <sql id="existByNameWhere">
        where category_code = #{categoryCode} and name = #{name}
        <if test="excludeId != null">and id != #{excludeId}</if>
    </sql>
    <!--endregion-->

    <!--region 新建字典-->
    <insert id="insert">
        insert into sys_dic (id,parent_id,category_code,name,spell,value,path,status,remark)
        values
        (
            #{entity.id},
            #{entity.parentId},
            #{entity.categoryCode},
            #{entity.name},
            #{entity.spell},
            #{entity.value},
            #{entity.path},
            #{entity.status},
            #{entity.remark}
        )
    </insert>
    <!--endregion-->

    <!--region 修改字典-->
    <update id="update">
        update sys_dic
        set
            parent_id = #{entity.parentId},
            category_code = #{entity.categoryCode},
            name = #{entity.name},
            spell = #{entity.spell},
            value = #{entity.value},
            status = #{entity.status},
            remark = #{entity.remark}
        where id = #{entity.id}
    </update>
    <!--endregion-->

    <!--region 根据主键修改字典状态-->
    <update id="updateStatus">
        update sys_dic
        set status = #{status}
        where id = #{id}
    </update>
    <!--endregion-->

    <!--region 更新字典类型编码-->
    <update id="updateCategoryCode">
        update sys_dic
        set category_code = #{newCategoryCode}
        where category_code = #{oldCategoryCode}
    </update>
    <!--endregion-->

    <!--region 根据主键更新排序路径-->
    <update id="updatePath">
        update sys_dic
        set path = #{path}
        where id = #{id}
    </update>
    <!--endregion-->

    <!--region 根据主键更新父节点-->
    <update id="updateParentId">
        update sys_dic
        set parent_id = #{parentId}
        where id = #{id}
    </update>
    <!--endregion-->
    
    <!--region 根据主键删除字典-->
    <delete id="deleteById">
        delete from sys_dic
        where id = #{id}
    </delete>
    <!--endregion-->

    <!--region 根据字典类型编码删除-->
    <delete id="deleteByCategoryCode">
        delete from sys_dic
        where category_code = #{categoryCode}
    </delete>
    <!--endregion-->

    <!--region 根据主键查询单个字典-->
    <select id="selectById" resultType="com.github.lvyanyang.sys.entity.SysDic">
        <include refid="select"/>
        where id = #{id}
    </select>
    <!--endregion-->

    <!--region 查询字典列表-->
    <select id="selectList" resultType="com.github.lvyanyang.sys.entity.SysDic">
        <include refid="list"/>
    </select>
    <!--endregion-->

    <!--region 获取指定节点的直接子节点数-->
    <select id="selectChildCount" resultType="java.lang.Integer">
        select count(1)
        from sys_dic
        where category_code = #{categoryCode} and parent_id = #{id}
    </select>
    <!--endregion-->
</mapper>