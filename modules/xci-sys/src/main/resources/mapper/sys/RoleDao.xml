<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.lvyanyang.sys.dao.RoleDao">
    <!--region 公共代码段-->

    <!--公共查询-->
    <sql id="select">
        select r.id,r.name,r.spell,r.code,d.id dept_id,d.name dept_name,r.dept_scope,r.path,r.status,r.remark
        from sys_role r left join sys_dept d on r.dept_id = d.id
    </sql>

    <!--公共Where查询条件-->
    <sql id="where">
        <where>
            <if test="filter.status != null">r.status = #{filter.status}</if>
            <if test="filter.deptId != null">and r.dept_id = #{filter.deptId}</if>
            <if test="filter.name != null and filter.name != ''">
                <bind name="sname" value="'%' + filter.name + '%'"/>
                and ( r.name like #{sname} or r.spell like #{sname}  or r.code like #{sname} )
            </if>
            <include refid="com.github.lvyanyang.internal.FrameworkDao.deptScope"/>
        </where>
    </sql>

    <!--查询List-->
    <sql id="list">
        <include refid="select"/>
        <include refid="where"/>
        order by r.id desc
    </sql>

    <!--endregion-->

    <!--region 是否存在指定主键的角色-->
    <select id="existxById" resultType="boolean">
        select count(1) from sys_role
        where id = #{id}
    </select>
    <!--endregion-->

    <!--region 是否存在指定机构主键的角色-->
    <select id="existxByDeptId" resultType="boolean">
        select count(1) from sys_role
       where dept_id = #{deptId}
    </select>
    <!--endregion-->

    <!--region 是否存在指定编码的角色-->
    <select id="existxByCode" resultType="boolean">
        select count(1) from sys_role
        where code = #{code}
        <if test="excludeId != null">and id != #{excludeId}</if>
    </select>
    <!--endregion-->

    <!--region 检查是否存在指定的角色名称-->
    <select id="existxByName" resultType="boolean">
        select count(1) from sys_role
        where dept_id = #{deptId} and name = #{name}
        <if test="excludeId != null">and id != #{excludeId}</if>
    </select>
    <!--endregion-->

    <!--region 新建角色-->
    <insert id="insert">
        insert into sys_role (id,name,spell,code,dept_id,dept_scope,path,status,remark) values
        (
            #{entity.id},
            #{entity.name},
            #{entity.spell},
            #{entity.code},
            #{entity.deptId},
            #{entity.deptScope},
            #{entity.path},
            #{entity.status},
            #{entity.remark}
        )
    </insert>
    <!--endregion-->

    <!--region 修改角色-->
    <update id="update">
        update sys_role
        set name = #{entity.name},
            spell = #{entity.spell},
            code = #{entity.code},
            dept_id = #{entity.deptId},
            path = #{entity.path},
            status = #{entity.status},
            remark = #{entity.remark}
        where id = #{entity.id}
    </update>
    <!--endregion-->

    <!--region 根据主键修改角色状态-->
    <update id="updateStatus">
        update sys_role
        set status = #{status}
        where id = #{id}
    </update>
    <!--endregion-->

    <!--region 根据主键修改角色机构数据权限-->
    <update id="updateDeptScope">
        update sys_role
        set dept_scope = #{deptScope}
        where id = #{id}
    </update>
    <!--endregion-->

    <!--region 根据主键删除角色-->
    <delete id="deleteById">
        delete from sys_role
        where id = #{id}
    </delete>
    <!--endregion-->

    <!--region 根据主键查询单个角色-->
    <select id="selectById" resultType="com.github.lvyanyang.sys.entity.SysRole">
        <include refid="select"/>
        where r.id = #{id}
    </select>
    <!--endregion-->

    <!--region 根据编码查询单个角色-->
    <select id="selectByCode" resultType="com.github.lvyanyang.sys.entity.SysRole">
        <include refid="select"/>
        where r.code = #{code}
    </select>
    <!--endregion-->

    <!--region 查询角色列表-->
    <select id="selectList" resultType="com.github.lvyanyang.sys.entity.SysRole">
        <include refid="list"/>
    </select>
    <!--endregion-->

    <!--region 查询角色分页列表-->
    <select id="selectPageList" resultType="com.github.lvyanyang.sys.entity.SysRole">
        <include refid="list"/>
    </select>
    <!--endregion-->
</mapper>