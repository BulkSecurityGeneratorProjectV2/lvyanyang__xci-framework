<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.lvyanyang.sys.dao.RoleDao">
    <!--region 公共代码段-->

    <!--公共查询-->
    <sql id="select">
        select r.id,r.name,r.spell,r.code,d.id dept_id,d.name dept_name,r.dept_scope,r.path,r.status,r.remark
        from sys_role r left join sys_dept d on r.dept_id = d.id
    </sql>

    <!--公共Where查询条件-->
    <sql id="where">
        <where>
            <if test="filter.status != null">and r.status = #{filter.status}</if>
            <if test="filter.deptId != null">and r.dept_id = #{filter.deptId}</if>
            <if test="filter.name != null and filter.name != ''">
                <bind name="sname" value="'%' + filter.name + '%'"/>
                and ( r.name like #{sname} or r.spell like #{sname}  or r.code like #{sname} )
            </if>
            <if test="filter.dataScope != null and filter.dataScope == true">
                <include refid="com.github.lvyanyang.internal.FrameworkDao.dataScope"/>
            </if>
        </where>
    </sql>

    <!--查询List-->
    <sql id="list">
        <include refid="select"/>
        <include refid="where"/>
        order by r.id desc
    </sql>

    <!--endregion-->

    <!--region 是否存在指定主键的角色-->
    <select id="existById" resultType="java.lang.Boolean">
        <include refid="com.github.lvyanyang.internal.FrameworkDao.exists">
            <property name="table" value="sys_role"/>
            <property name="where" value="existByIdWhere"/>
        </include>
    </select>
    <!--existById Where-->
    <sql id="existByIdWhere">
        where id = #{id}
    </sql>
    <!--endregion-->

    <!--region 是否存在指定机构主键的角色-->
    <select id="existByDeptId" resultType="java.lang.Boolean">
        <include refid="com.github.lvyanyang.internal.FrameworkDao.exists">
            <property name="table" value="sys_role"/>
            <property name="where" value="existByDeptIdWhere"/>
        </include>
    </select>
    <!--existByDeptId Where-->
    <sql id="existByDeptIdWhere">
        where dept_id = #{deptId}
    </sql>
    <!--endregion-->

    <!--region 是否存在指定编码的角色-->
    <select id="existByCode" resultType="java.lang.Boolean">
        <include refid="com.github.lvyanyang.internal.FrameworkDao.exists">
            <property name="table" value="sys_role"/>
            <property name="where" value="existByCodeWhere"/>
        </include>
    </select>
    <!--existByCodeWhere Where-->
    <sql id="existByCodeWhere">
        where code = #{code}
        <if test="id != null">and id != #{excludeId}</if>
    </sql>
    <!--endregion-->

    <!--region 检查是否存在指定的角色名称-->
    <select id="existByName" resultType="java.lang.Boolean">
        <include refid="com.github.lvyanyang.internal.FrameworkDao.exists">
            <property name="table" value="sys_role"/>
            <property name="where" value="existByNameWhere"/>
        </include>
    </select>
    <!--existByNameWhere-->
    <sql id="existByNameWhere">
        where dept_id = #{deptId} and name = #{name}
        <if test="excludeId != null">and id != #{excludeId}</if>
    </sql>
    <!--endregion-->

    <!--region 新建角色-->
    <insert id="insert">
        insert into sys_role (id,name,spell,code,dept_id,dept_scope,path,status,remark) values
        (
            #{entity.id},
            #{entity.name},
            #{entity.spell},
            #{entity.code},
            #{entity.deptId},
            #{entity.deptScope},
            #{entity.path},
            #{entity.status},
            #{entity.remark}
        )
    </insert>
    <!--endregion-->

    <!--region 修改角色-->
    <update id="update">
        update sys_role
        set name = #{entity.name},
            spell = #{entity.spell},
            code = #{entity.code},
            dept_id = #{entity.deptId},
            dept_scope = #{entity.deptScope},
            path = #{entity.path},
            status = #{entity.status},
            remark = #{entity.remark}
        where id = #{entity.id}
    </update>
    <!--endregion-->

    <!--region 根据主键修改角色状态-->
    <update id="updateStatus">
        update sys_role
        set status = #{status}
        where id = #{id}
    </update>
    <!--endregion-->

    <!--region 根据主键修改角色机构数据权限-->
    <update id="updateScope">
        update sys_role
        set dept_scope = #{deptScope}
        where id = #{id}
    </update>
    <!--endregion-->

    <!--region 根据主键删除角色-->
    <delete id="deleteById">
        delete from sys_role
        where id = #{id}
    </delete>
    <!--endregion-->

    <!--region 根据主键查询单个角色-->
    <select id="selectById" resultType="com.github.lvyanyang.sys.entity.SysRole">
        <include refid="select"/>
        where r.id = #{id}
    </select>
    <!--endregion-->

    <!--region 根据编码查询单个角色-->
    <select id="selectByCode" resultType="com.github.lvyanyang.sys.entity.SysRole">
        <include refid="select"/>
        where r.code = #{code}
    </select>
    <!--endregion-->

    <!--region 查询角色列表-->
    <select id="selectList" resultType="com.github.lvyanyang.sys.entity.SysRole">
        <include refid="list"/>
    </select>
    <!--endregion-->

    <!--region 查询角色分页列表-->
    <select id="selectPageList" resultType="com.github.lvyanyang.sys.entity.SysRole">
        <include refid="list"/>
    </select>
    <!--endregion-->

    <!--region 查询指定用户关联的角色列表-->
    <select id="selectListByUserId" resultType="com.github.lvyanyang.sys.entity.SysRole">
        <include refid="select"/>
            where r.status=1 and exists (
            select 1 from sys_user_role_map map where map.user_id = #{userId} and map.role_id = r.id
        )
    </select>
    <!--endregion-->

    <!--region 查询指定用户未关联的角色列表-->
    <select id="selectUnListByUserId" resultType="com.github.lvyanyang.sys.entity.SysRole">
        <include refid="select"/>
            where r.status=1 and not exists (
            select 1 from sys_user_role_map map where map.user_id = #{userId} and map.role_id = r.id
        )
    </select>
    <!--endregion-->

    <!--region 根据角色主键查询模块对象列表-->
    <select id="selectModuleListByRoleId" resultType="com.github.lvyanyang.sys.entity.SysModule">
        select
        <include refid="com.github.lvyanyang.sys.dao.ModuleDao.columns"/>
        from sys_module
        where status = 1 and id in (
            select distinct target_id from sys_object_map where object_name='role' and object_id = #{roleId} and target_name='module'
        )
        order by parent_id asc,path asc
    </select>
    <!--endregion-->

    <!--region 根据角色主键查询机构数据对象列表-->
    <select id="selectDeptDataListByRoleId" resultType="com.github.lvyanyang.sys.entity.SysDept">
        <include refid="com.github.lvyanyang.sys.dao.DeptDao.select"/>
        where d.status = 1 and d.id in (
            select distinct target_id from sys_object_map where object_name='role' and object_id = #{roleId} and target_name='dept.data'
        )
        order by d.parent_id asc,d.path asc
    </select>
    <!--endregion-->
</mapper>